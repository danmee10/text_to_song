<h1 id="pooop"></h1>
<div class="row">
    <div class="span6">
      <p><%= @song.original_text %></p>
      <%= render "options_form" %>
    </div>
    <div class="span6">
          <% @song.stanzas.each_with_index do |stanza, index| %>
        <table class="table">
            <% stanza.lines.each do |line| %>
            <tr class="bitch" id=<%="#{line.id}"%>>
              <td class="line menu">
                <% line.words.each_with_index do |word, index| %>
               <span class="#{index}" id=<%="#{word.id}"%>><%= word.to_s %></span>
               <% end %>
              </td>
              <td><%= line.syllables %></td>
            </tr>
            <% end %>
        </table>
            <br/>
          <% end %>
    </div>
  </div>
  </div>
</div>

<div class="row">
    <div class="span6">
      <p><%= @song.original_text %></p>
      <%= render "options_form" %>
    </div>
    <div class="span6">
        <table class="table">
          <% @song.lyrics.each_with_index do |pair, index| %>
            <tr>
              <td><%="#{index + 1})"%></td>
              <td><%="#{pair}" %></td>
              <td><%="#{@song.syllable_count(pair.join(' '))}" %></td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
  </div>
</div>

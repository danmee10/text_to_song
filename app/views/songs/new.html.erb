<%= render "form" %>
  <br/>
  <br/>

<% if @song%>
  <% @song.lyrics.each do |pair| %>
    <%= pair %>
  <% end %>
  <br/>
  <br/>
  <%= @song.text %>
<%end%>





<% if false %>
  <% @song.lyrics.each do |pair| %>
    <%if pair.class == String %>
      <% pair.upcase %>
    <% else %>
      <% pair.each do |line| %>
        <% if line.class != String %>
          <%= line.join(" ") %>
          <br/>
        <%else%>
          <%= line %>
        <% end %>
      <%end%>
    <%end%>
  <%end%>
  <%end%>
